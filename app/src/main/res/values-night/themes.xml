<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MediAlert" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary -->
        <item name="colorPrimary">@color/blue200</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/blue700</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/teal200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Surfaces -->
        <item name="colorSurface">@color/gray900</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/gray700</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorSurfaceContainerLow">@color/gray800</item>

        <!-- Text -->
        <item name="textAppearanceTitleMedium">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Material3.BodyMedium</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="Theme.MediAlert.EmergencyContacts" parent="Theme.MediAlert" />

</resources>
